@model EmployeeModelPackage.EmployeeModel

<h1>Edit Employee</h1>

@if (Model == null)
{
    <p>No employee was found with this ID.</p>
}
else
{
    <style>
        .text-danger {
            color: red;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .form-box {
            background: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        .form-title {
            margin-bottom: 25px;
            font-size: 20px;
            font-weight: 600;
            color: #3c8dbc;
            border-bottom: 2px solid #3c8dbc;
            padding-bottom: 10px;
        }

        .form-row {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
            margin-bottom: 25px;
        }

        .form-group-half {
            flex: 1;
            min-width: 45%;
        }

        .btn-center {
            display: flex;
            justify-content: center;
        }

        .btn-edit {
            background-color: #f0ad4e;
            color: white;
            padding: 10px 30px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .btn-edit:hover {
                background-color: #ec971f;
            }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            padding: 10px 30px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .btn-delete:hover {
                background-color: #bd2130;
            }

        .btn-left {
            display: flex;
            justify-content: flex-start;
            margin-top: 20px;
        }
    </style>

    <section class="content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="form-box">
                        <div class="form-title">Edit Employee</div>

                        <form method="post" asp-controller="Employee" asp-action="UpdateEmployeeData" id="editForm">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />

                            <div class="form-row">
                                <div class="form-group form-group-half">
                                    <label asp-for="Name" class="control-label">Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-group form-group-half">
                                    <label asp-for="Email" class="control-label">Email</label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group form-group-half">
                                    <label asp-for="Salary" class="control-label">Salary</label>
                                    <input asp-for="Salary" class="form-control" placeholder="Enter Salary" />
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                </div>

                                <div class="form-group form-group-half">
                                    <label asp-for="Position" class="control-label">Position</label>
                                    <input asp-for="Position" class="form-control" placeholder="Enter Position" />
                                    <span asp-validation-for="Position" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="btn-left">
                                <button type="submit" class="btn-edit" id="editbtn">Edit</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            $('#editbtn').click(function (e) {
                e.preventDefault();

                var form = $('#editForm');
                var formData = form.serialize();

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: formData,
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                                Swal.fire({
                                icon: 'success',
                               title: 'Success!',
                             text: response.message || 'Employee updated successfully!',
                             confirmButtonText: 'OK',
                         }).then((result) => {
                             if (result.isConfirmed) {
                                   window.location.href = '@Url.Action("List", "Employee")';  // 🔁 change this URL as needed
                         }
                   });

                    },
                    error: function (xhr) {
                        let errorMessage = "Something went wrong!";
                        if (xhr.responseJSON && xhr.responseJSON.error) {
                            errorMessage = xhr.responseJSON.error;
                        }
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: errorMessage
                        });
                    }
                });
            });
        });
    </script>
}
